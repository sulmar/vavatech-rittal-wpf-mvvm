    <Window.Resources>
        <SolidColorBrush x:Key="MyBackgroundBrush" Color="Blue" />
        <SolidColorBrush x:Key="MyForegroundBrush" Color="White" />
        
        <sys:Double x:Key="MyWidth">200</sys:Double>

