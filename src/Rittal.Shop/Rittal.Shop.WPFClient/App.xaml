<Application x:Class="Rittal.Shop.WPFClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:vm="clr-namespace:Rittal.Shop.ViewModels;assembly=Rittal.Shop.ViewModels"
             StartupUri="Views/ShellView.xaml">
    <Application.Resources>

        <ResourceDictionary>

            <vm:ViewModelLocator x:Key="ViewModelLocator" />
            

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/CheckboxStyles.xaml" />
                <ResourceDictionary Source="Resources/ButtonStyles.xaml" />
                
                <ResourceDictionary Source="Resources/DataTemplates.xaml" />

            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
